{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "dlv",
            "type": "shell",
            "isBackground": true,
            "command": [
                "dlv",
            ],
            "args": [
                "debug",
                "--headless",
                "--listen=127.0.0.1:43000",
                "--api-version=2",
                "${workspaceFolder}"
            ],
            "problemMatcher": {
                "owner": "go",
                "fileLocation": "relative",
                "pattern": {
                    "regexp": "^couldn't start listener:", // error if matched
                },
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "^API server listening at:",
                    "endsPattern": "43000" // success if matched
                }
            },
            "dependsOn": [
                "logs"
            ]
        },
        {
            "type": "process",
            "isBackground": true,
            "label": "logs",
            "command": "tail",  // <-- your shell here
            "args": [
                "-f",
                "${workspaceFolder}/crib.log"  // login shell for bash
            ],
            "problemMatcher": [
                {
                    "pattern": [
                    {
                        "regexp": ".",
                        "file": 1,
                        "location": 2,
                        "message": 3
                    }
                    ],
                    "background": {
                        "activeOnStart": true,
                        "beginsPattern": ".",
                        "endsPattern": ".",
                    }
                }
            ],
            "presentation": {
                "echo": false,  // silence "Executing task ..."
                "focus": true,
                "group": "build",  // some arbitrary name for the group
                "panel": "dedicated"
            }
        }
    ]
}